
@{
    ViewBag.Title = "Gratifikasi";
    ViewBag.NavMainLink = "letter";
    ViewBag.NavMainLinkSubmenu = "GRATIFIKASI";
}

@section Scripts{
    <script type="text/javascript" src="~/Js/Gratifikasi/GratifikasiIndex.js"></script>
    <script type="text/javascript" src="~/Content/Boostraps/dist/js/moment.min.js"></script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-header">
    <!-- Main content -->
    <section class="container">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Jenis Penerimaan</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form id="quickForm" role="form">
                        <div class="box-body">
                            <!-- radio -->
                            <div class="form-group" id="radiogroups">
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="pemberianuang" value="Pemberian uang (include cek)">
                                        Pemberian uang (include cek)
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="serviceberlebih" value="Service yang berlebihan">
                                        Service yang berlebihan
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="rabatdiskon" value="Rabat/diskon">
                                        Rabat/diskon
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="komisi" value="Komisi">
                                        Komisi
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="pinjamanpribadi" value="Pinjaman pribadi ke mitra bisnis">
                                        Pinjaman pribadi ke mitra bisnis
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="perjalananwisata" value="Perjalanan wisata">
                                        Perjalanan wisata
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="fasilitaspengobatan" value="Fasilitas pengobatan">
                                        Fasilitas pengobatan
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="parcel" value="Parcel, souvenir, gift">
                                        Parcel, souvenir, gift
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="jamuanmakan" value="Jamuan makan">
                                        Jamuan makan
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="fasilitaslainnya" value="option3" onchange="toggleInput()">
                                        Fasilitas atau barang lainnya
                                    </label>
                                </div>
                                <div class="form-group" id="lainnyaInput" style="display: none;">
                                    <input type="text" id="inputLainnya" name="inputLainnya" class="form-control" placeholder="Enter ...">
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </form>
                </div>
                <!-- /.box -->
                <!-- general form elements disabled -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Estimasi Harga</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form role="form">
                            <!-- text input -->
                            <div class="form-group">
                                <input type="number" id="estimasiharga" class="form-control" placeholder="Your answer">
                            </div>
                        </form>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- general form elements disabled -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Tempat Penerimaan</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form role="form">
                            <!-- text input -->
                            <div class="form-group">
                                <input type="text" id="tempatpenerimaan" class="form-control" placeholder="Your answer">
                            </div>
                        </form>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Tanggal Penerimaan</h3>
                    </div>
                    <div class="box-body">
                        <!-- Date -->
                        <div class="form-group">
                            <label>Date:</label>

                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control pull-right" id="datepicker">
                            </div>
                            <!-- /.input group -->
                        </div>
                        <!-- /.form group -->
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- general form elements disabled -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Nama Pemberi</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form role="form">
                            <!-- text input -->
                            <div class="form-group">
                                <input type="text" id="namapemberi" class="form-control" placeholder="Your answer">
                            </div>
                        </form>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- general form elements disabled -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Pekerjaan &amp; Jabatan Pemberi</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form role="form">
                            <!-- text input -->
                            <div class="form-group">
                                <input type="text" id="pekerjaanpemberi" class="form-control" placeholder="Your answer">
                            </div>
                        </form>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- general form elements disabled -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Nama &amp; Alamat Perusahaan</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form role="form">
                            <!-- text input -->
                            <div class="form-group">
                                <input type="text" id="namaperusahaan" class="form-control" placeholder="Your answer">
                            </div>
                        </form>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- general form elements disabled -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Hubungan dengan Pemberi</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form role="form">
                            <!-- text input -->
                            <div class="form-group">
                                <input type="text" id="hubungandgpemberi" class="form-control" placeholder="Your answer">
                            </div>
                        </form>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- general form elements disabled -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Alasan Pemberian</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form role="form">
                            <!-- text input -->
                            <div class="form-group">
                                <input type="text" id="alasanpemberian" class="form-control" placeholder="Your answer">
                            </div>
                        </form>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">
                <!-- Horizontal Form -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Bukti Gratifikasi</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form class="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputFile">File input</label>
                                <input type="file" id="exampleInputFile">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="cekboks"> Saya telah mengisi laporan gratifikasi dengan sebenar - benarnya
                                </label>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="button" class="btn btn-info pull-right" onclick="submitGratifikasi()">Submit</button>
                        </div>
                        <!-- /.box-footer -->
                    </form>
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->