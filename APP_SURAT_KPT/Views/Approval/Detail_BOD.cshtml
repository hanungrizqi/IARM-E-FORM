
@{
    ViewBag.Title = "Detail Approval BOD";
}

@section Styles{
    <style>
        #id {
            display: none;
        }
    </style>
}

@section Scripts{
    <script type="text/javascript" src="~/Js/Approval/ApprovalBOD_Detail.js"></script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-header">
    <!-- Main content -->
    <section class="container">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Detail Penerimaan</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form role="form">
                            <!-- text input -->
                            <div class="form-group">
                                <label>Jenis Penerimaan</label>
                                <input type="text" class="form-control" id="id" name="id" value="@ViewBag.ID" hidden>
                                <input type="text" class="form-control" id="jenispenerimaan" placeholder="Loading ..." disabled>
                            </div>
                            <div class="form-group">
                                <label>Estimasi Harga</label>
                                <input type="text" class="form-control" id="estimasiharga" placeholder="Loading ..." disabled>
                            </div>
                            <div class="form-group">
                                <label>Tempat Penerimaan</label>
                                <input type="text" class="form-control" id="tempatpenerimaan" placeholder="Loading ..." disabled>
                            </div>
                            <div class="form-group">
                                <label>Tanggal Penerimaan</label>
                                <input type="text" class="form-control" id="tanggalpenerimaan" placeholder="Loading ..." disabled>
                            </div>

                            <!-- textarea -->
                            <div class="form-group">
                                <label>Alasan Pemberian</label>
                                <textarea class="form-control" rows="3" id="alasanpemberian" placeholder="Loading ..." disabled></textarea>
                            </div>
                        </form>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">
                <!-- Horizontal Form -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Detail Pemberi</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form role="form">
                            <!-- text input -->
                            <div class="form-group">
                                <label>Nama Pemberi</label>
                                <input type="text" class="form-control" id="namapemberi" placeholder="Loading ..." disabled>
                            </div>
                            <div class="form-group">
                                <label>Pekerjaan Pemberi</label>
                                <input type="text" class="form-control" id="pekerjaanpemberi" placeholder="Loading ..." disabled>
                            </div>
                            <div class="form-group">
                                <label>Nama Perusahaan</label>
                                <input type="text" class="form-control" id="namaperusahaan" placeholder="Loading ..." disabled>
                            </div>
                            <div class="form-group">
                                <label>Hubungan Pemberi</label>
                                <input type="text" class="form-control" id="hubunganpemberi" placeholder="Loading ..." disabled>
                            </div>
                        </form>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
        <!-- Horizontal Form -->
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Bukti Gift &amp; Entertainment</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal">
                <div class="box-body">
                    <!-- Tampilkan GAMBAR BUKTI GRATIFIKASI DISINI -->
                    <div id="buktiGratifikasiContainer" class="text-center">
                        <img id="buktiGratifikasiImage" src="" alt="Bukti Gratifikasi" style="max-width: 100%; max-height: 400px;">
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <div class="row text-center">
                        <div class="col-md-12">
                            <a href="/Approval/BOD" class="btn btn-default">Back</a>
                            <button type="button" class="btn btn-danger" value="BOD REJECT" onclick="rejectApproval(this.value)">Cancel</button>
                            <button type="button" class="btn btn-info" value="BOD APPROVED" onclick="submitApproval(this.value)">Approve</button>
                        </div>
                    </div>
                </div>

                <!-- /.box-footer -->
            </form>
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->