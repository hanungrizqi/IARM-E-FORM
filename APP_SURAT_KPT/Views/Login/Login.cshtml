
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        <a href="../../index2.html"><b>APP</b>Integrasi</a>
    </div>
    <!-- /.login-logo -->
    <script>
    function showError(message) {
        // Menampilkan pesan kesalahan dalam sebuah elemen dengan ID "error-message"
        var errorElement = document.getElementById("error-message");
        errorElement.innerHTML = message;
        errorElement.style.display = "block";
    }
    </script>

    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        @if (ViewBag.Msg != null)
        {
            <div class="box-body">
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                    @Html.Raw(@ViewBag.Msg)
                </div>
            </div>
        }

        <div id="error-message" style="display: none;"></div>
        <form action="@(Url.Action("loginUser", "Login"))" method="post">
            <div class="form-group has-feedback">
                <input type="text" class="form-control" id="nrp" name="nrp" placeholder="nrp">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" id="password" name="password" placeholder="password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    &nbsp;
                    @*<div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> Remember Me
                        </label>
                    </div>*@
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
                <!-- /.col -->
                <!--</div>-->
        </form>

        <!-- /.social-auth-links -->
        @*<a href="#">I forgot my password</a><br>
        <a href="register.html" class="text-center">Register a new membership</a>*@

    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->