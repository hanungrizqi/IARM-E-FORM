        <script>
            function submitForm() {
                var confirmed = confirm("Anda telah menyetujui pernyataan di atas. Apakah Anda yakin ingin melanjutkan?");
                if (confirmed) {
                    document.getElementById("nrp").submit();
                    swal("Terima kasih!", "Data berhasil disimpan", "success")
                        .then(function () {
                            window.location.href = "/Integritas/RptFaktaIntegritas";
                        });
                }
            }
        </script>
